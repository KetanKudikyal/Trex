{
  "name": "lightning-client",
  "version": "1.0.0",
  "description": "Lightning Network client with scriptless atomic swaps using Schnorr signatures",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec tsx src/backend/server.ts",
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "@getalby/lightning-tools": "^5.0.0",
    "@noble/secp256k1": "^2.0.0",
    "bitcoinjs-lib": "^6.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "webln": "^0.3.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "lightning",
    "bitcoin",
    "schnorr",
    "atomic-swap",
    "defi",
    "citrea"
  ],
  "author": "Lightning Client Team",
  "license": "MIT"
}
